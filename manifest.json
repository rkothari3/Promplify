{
  "manifest_version": 3,
  "name": "Promplify",
  "version": "1.0",
  "description": "Enhances prompts for AI tools like ChatGPT and Perplexity",
  "permissions": ["activeTab", "scripting", "clipboardRead", "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "Promplify.png"
  },
  "icons": {
    "128": "Promplify.png"
  }
}
